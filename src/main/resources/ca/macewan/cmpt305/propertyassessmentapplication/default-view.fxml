<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane id="SplitPane" dividerPositions="0.29797979797979796" maxHeight="-Infinity" maxWidth="-Infinity"
           minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1250.0"
           xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ca.macewan.cmpt305.propertyassessmentapplication.PropertyAssessmentController">
    <items>
        <AnchorPane minHeight="0.0" minWidth="0.0">

            <children>
                <!-- Search Bar -->
                <TextField fx:id="SearchBar" layoutX="7.0" layoutY="1.0" promptText="Address, Neighbourhood, City..."
                           AnchorPane.leftAnchor="7.0" AnchorPane.rightAnchor="6.0" AnchorPane.topAnchor="1.0"/>

                <!-- Accordion Menu -->
                <Accordion fx:id="filterAccordion" layoutY="27.0" prefHeight="340.0" prefWidth="175.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="27.0">
                    <panes>
                        <TitledPane fx:id="yearBuiltPane" animated="false" text="Year Built">
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                        </TitledPane>
                        <TitledPane fx:id="propertyValuePane" animated="false" text="Property Value">
                            <!--                              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />-->
                            <ScrollPane fx:id="propertyValueScrollPane" fitToWidth="true" prefHeight="180.0"
                                        prefWidth="200.0"
                            >
                                <VBox fx:id="propertyValueOptions" spacing="5.0" minHeight="0.0"
                                      minWidth="0.0" prefWidth="200.0">
                                    <CheckBox text="\$200,000 - $250,000 CAD"/>
                                    <CheckBox text="\$250,001 - $300,000 CAD"/>
                                    <CheckBox text="\$300,001 - $450,000 CAD"/>
                                    <CheckBox text="\$450,001 - $500,000 CAD"/>
                                    <CheckBox text="\$500,001 - $550,000 CAD"/>
                                    <CheckBox text="\$550,001 - $600,000 CAD"/>
                                    <CheckBox text="\$600,001 - $650,000 CAD"/>
                                    <CheckBox text="\$650,001 - $700,000 CAD"/>
                                    <CheckBox text="\$700,001 - $750,000 CAD"/>
                                    <CheckBox text="\$750,001 - $800,000 CAD"/>
                                    <CheckBox text="\$800,001 - $900,000 CAD"/>
                                    <CheckBox text="\$900,001 - $1,000,000 CAD"/>
                                    <CheckBox text="\$1 million - $1.5 million CAD"/>
                                    <CheckBox text="\$1.5 million - $2 million CAD"/>
                                    <CheckBox text="\$3 million - $4 million CAD"/>
                                    <CheckBox text="\$4 million - $5 million CAD"/>
                                    <CheckBox text="\$5 million - $6 million CAD"/>
                                    <CheckBox text="\$6 million - $8 million CAD"/>
                                    <CheckBox text="\$8 - $10 million CAD"/>
                                    <CheckBox text="\$10 - $15 million CAD"/>
                                    <CheckBox text="\$15 million CAD+"/>


                                </VBox>
                            </ScrollPane>
                        </TitledPane>
                        <TitledPane fx:id="garagePane" animated="false" text="Garage">
                            <ScrollPane fx:id="garageScrollPane" fitToWidth="true" prefHeight="170.0"
                                        prefWidth="200.0"
                            >
                                <VBox fx:id="garageOptions" spacing="5.0" minHeight="0.0"
                                      minWidth="0.0" prefWidth="200.0">
                                    <fx:define>
                                        <ToggleGroup fx:id="garageToggleGroup"/>
                                    </fx:define>

                                    <RadioButton fx:id="garageNotSpecBtn" text="Not specified"
                                                 toggleGroup="$garageToggleGroup"/>
                                    <RadioButton fx:id="garageYesBtn" text="Yes"
                                                 toggleGroup="$garageToggleGroup"/>
                                    <RadioButton fx:id="garageNoBtn" text="No"
                                                 toggleGroup="$garageToggleGroup"/>

                                </VBox>
                            </ScrollPane>
                        </TitledPane>
                        <TitledPane fx:id="neighbourhoodPane" animated="false" text="Neighbourhood">
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                            <VBox fx:id="neighbourhoodSearchContainer" spacing="5.0" minHeight="0.0"
                                  minWidth="0.0" prefWidth="200.0">
                                <TextField fx:id="SearchBarNeighbourhood" layoutX="7.0" layoutY="1.0"
                                           promptText="Search Neighbourhood"
                                           AnchorPane.leftAnchor="7.0" AnchorPane.rightAnchor="6.0"
                                           AnchorPane.topAnchor="1.0"/>
                            </VBox>

                        </TitledPane>
                        <TitledPane fx:id="propertyClassPane" animated="false" text="Property Class">
                            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"/>
                        </TitledPane>
                    </panes>
                </Accordion>

                <!-- TextArea and Copy Button -->
                <TextArea fx:id="textArea" layoutX="10.0" layoutY="370.0" prefHeight="100.0" prefWidth="150.0"
                          AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="370.0"/>
                <Button text="Copy" layoutX="10.0" layoutY="480.0" onAction="#handleCopyButtonClick"
                        AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="480.0"/>

                <!-- Enter and Clear Buttons -->
                <Button fx:id="enterButton" layoutX="322.0" layoutY="691.0" mnemonicParsing="false" text="Enter"
                        AnchorPane.bottomAnchor="1.0" AnchorPane.rightAnchor="10.0"/>
                <Button fx:id="clearButton" layoutY="691.0" mnemonicParsing="false" text="Clear"
                        AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="10.0"/>
            </children>
        </AnchorPane>


        <SubScene id="MapScene" fx:id="MapScene" accessibleRole="PARENT" accessibleText="map" height="718.0"
                  width="873.0">
            <root>
                <Region/>
            </root>
        </SubScene>
    </items>
</SplitPane>
